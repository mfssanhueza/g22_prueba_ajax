<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-6">
      <h2>Empresas</h2>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody id='enterprises'>
          <%= render @enterprises %>
        </tbody>
      </table>
  </div>
  <div class="col-md-6">
    <h4>Crear nueva empresa</h4>
    <%= form_with(model: @enterprise) do |form| %>
    <div class="field">
      <%= form.label 'Nombre empresa:' %>
      <%= form.text_field :name %>
    </div>
    <div class="actions">
      <%= form.submit 'Crear empresa', class:'btn btn-success' %>
    </div>
    <% end %>
  </div>
</div>
